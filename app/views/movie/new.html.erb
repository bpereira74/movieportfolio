<link rel="stylesheet"
href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.mi
n.css">
<h1>Movie#new</h1>
<p>Find me in app/views/movie/new.html.erb</p>

<%= form_with model: @movie, method: :post do |form| %>
<div class="col-4">
<div>
<%= form.label :name, "Enter movie name", class: "form-label"
%>
<%= form.text_field :name, class: "form-control" %>
</div>
<div>
<%= form.label :synopsis, "Enter movie synopsis", class:
"form-label" %>
<%= form.text_field :lastname, class: "form-control" %>
</div>
<div>
<%= form.label :director, "Enter movie director", class:
"form-label" %>
<%= form.text_field :specialty, class: "form-control" %>
</div>
<div>
<%= form.submit "Submit", class: "btn btn-primary" %>
</div>
</div>
<% end %>